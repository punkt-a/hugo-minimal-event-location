{{- $stopindex := sub (len .Pages) 1 -}}
{
    "type": "FeatureCollection",
    "features": [
    {{- range $index, $item := .Pages }}
        {
            "type": "Feature",
            "properties": {
                "name": {{ (printf "%s (%s)" $item.Title $item.Params.District) | jsonify }},
                "description": {{ (printf "%s\n%s %s\n%s" $item.Params.Street $item.Params.Zipcode $item.Params.City .Permalink) | jsonify }}
            },
            "geometry": {
                "type": "Point",
                "coordinates": [
                    {{ .Params.Longitude }},
                    {{ .Params.Latitude }}
                ]
            }
        }{{ if ne $index $stopindex }},{{ end }}
    {{- end }}
    ]
}
